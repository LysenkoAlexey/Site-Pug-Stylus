@media (max-width:600px)
  body
    background-color #164B69
    display flex
    align-items center
    justify-content center
    color black
    text-align center
    flex-direction column
    font-size 12px
    font-family arial

    .firstFlex
      width 100%
      //min-height 700px
      //min-width 100px
      padding indentValue
      margin @padding
      //background-color #E3E3E3
      display flex
      flex-direction column

      .menuFlex
        width 100%
        padding padding/2
        text-indent 3
        display flex-inline
        flex-direction row
        flex-wrap wrap
        justify-content space-between
        row-gap 5px
        //justify-content space-around
        line-height 4
          //margin 1vw
          //text-align justify
          //text-indent 2vw
          //word-spacing 0.5em
        .menuItem
          a
            text-decoration none
            font-weight: bold
            color black
          a:hover
            background-color grey //#DCDCDC
          span
            background-color grey

      .centralBlock
        width 100%
        //padding indentValue
        //margin @padding
        background-color #E3E3E3
        display flex
        flex-direction column
        align-items center

        .menuFlex
          display flex-inline
          width 40%
          flex-direction row
          flex-wrap wrap
          row-gap 5px
          justify-content space-between

